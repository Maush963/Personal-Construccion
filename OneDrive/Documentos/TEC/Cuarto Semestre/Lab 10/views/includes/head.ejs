<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>League of Legends</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    </head>
    <body>
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
              <a class="navbar-item" href="/">
                <img src="https://logosmarcas.net/wp-content/uploads/2020/11/League-of-Legends-Logo-2009-2019.jpg" width="112" height="60">
              </a>
          
              <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
              </a>
            </div>
          
            <div id="navbarBasicExample" class="navbar-menu">
              <div class="navbar-start">
                <% for(permission of permissions) { %>
                  <% if(permission.permission == 'view_champ') { %>
                  <a class="navbar-item" href="/">
                  Champion
                  </a>
                  <% } %>
              <% } %>
          
              <% for(permission of permissions) { %>
                <% if(permission.permission == 'create_champ') { %>
                <a class="navbar-item" href="/create">
                Create
                </a>
                <% } %>
            <% } %>
          
              <div class="navbar-end">
                <div class="navbar-item">
                  <div class="buttons">
                    <% if (username == '') { %>
                    <a href="/users/signup" class="button is-primary">
                      <strong>Sign up</strong>
                    </a>
                    <a href="/users/login" class="button is-light">
                      Log in
                    </a>
                    <% } else { %>
                    <strong>Hello! <%= username %> | &nbsp;&nbsp;</strong>
                    <a href="/users/logout" class="button is-danger">
                      Log out
                    </a>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </nav>

        <section class="section">
            <div class="container">